<div class="container">
  <h2><%= @user.email %></h2>

  <% if not @user.admin? %>
    <% if @user.agent? %>
      <h2 class="page-header">Resolved Tickets</h2>
    <% elsif @user.customer? %>
      <h2 class="page-header">Tickets</h2>
    <% end %>

    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Ticket</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @tickets.each do |ticket| %>
          <tr id="ticket-<%= ticket.id %>" data-link="<%= ticket_path(ticket) %>"
            class="<%= ticket_status_class(ticket) %>">
            <td><%= ticket.id %></td>
            <td><%= ticket.content %></td>
            <td><%= ticket.status.capitalize %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <% if policy(Ticket).new? %>
    <%= link_to "Create Ticket", new_ticket_path,
      id: "create-new-ticket-button", class: "btn btn-primary" %>
  <% end %>
</div>
